# ==============================================
# SAAS BOILERPLATE - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================

# -----------------
# APPLICATION
# -----------------
NODE_ENV=development
PORT=3000
APP_NAME=SaaS Boilerplate
APP_URL=http://localhost:3000

# -----------------
# DATABASE (MongoDB)
# -----------------
MONGODB_URI=mongodb://localhost:27017/saas-boilerplate
# Production example: mongodb://user:password@host:27017/saas-boilerplate?authSource=admin

# -----------------
# LOGGING
# -----------------
LOG_LEVEL=info
# Options: fatal, error, warn, info, debug, trace
# Development: debug | Production: info

# -----------------
# CORS
# -----------------
CORS_ORIGIN=http://localhost:3001
# Production: https://app.yourdomain.com
# Multiple origins: http://localhost:3001,https://app.yourdomain.com

# -----------------
# SECURITY
# -----------------
# Generate secure random string (32+ characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------
# RATE LIMITING
# -----------------
RATE_LIMIT_TTL=900
# Time window in seconds (900 = 15 minutes)
RATE_LIMIT_MAX=100
# Max requests per TTL window

# -----------------
# GRAPHQL
# -----------------
GRAPHQL_PLAYGROUND=true
# Set to false in production
GRAPHQL_INTROSPECTION=true
# Set to false in production

# -----------------
# WEBSOCKETS
# -----------------
WEBSOCKET_PORT=3000
# WebSocket server will use same port as HTTP server
WEBSOCKET_CORS_ORIGIN=http://localhost:3001

# -----------------
# MULTI-TENANT (Future)
# -----------------
MULTI_TENANT_ENABLED=false
# Set to true when multi-tenancy is activated (Phase 3)

# ==============================================
# EXTERNAL SERVICES (Script 4-5 will use these)
# ==============================================

# -----------------
# EMAIL (SendGrid)
# -----------------
#SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxx
#SENDGRID_FROM_EMAIL=noreply@yourdomain.com
#SENDGRID_FROM_NAME=SaaS Boilerplate

# -----------------
# PAYMENT (Stripe)
# -----------------
#STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxx
#STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxx
#STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxx

# -----------------
# CRM (Zoho)
# -----------------
#ZOHO_CLIENT_ID=xxxxxxxxxxxxxxxxx
#ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxx
#ZOHO_REFRESH_TOKEN=xxxxxxxxxxxxxxxxx
#ZOHO_API_DOMAIN=https://www.zohoapis.com

# -----------------
# OAUTH (Google & GitHub)
# -----------------
#GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxx.apps.googleusercontent.com
#GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxx
#GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

#GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxx
#GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxx
#GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ==============================================
# END OF CONFIGURATION
# ==============================================
