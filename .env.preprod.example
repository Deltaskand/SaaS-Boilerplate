# ================================================
# ENVIRONMENT VARIABLES - PRE-PRODUCTION OVH
# ================================================
# Copy this file to .env.preprod and fill with real values
# NEVER commit .env.preprod to Git!
# ================================================

# -----------------
# APPLICATION
# -----------------
APP_NAME=SaaS Boilerplate PreProd
APP_URL=https://preprod-api.votredomaine.com
NODE_ENV=production

# -----------------
# DATABASE (PostgreSQL)
# -----------------
POSTGRES_DB=saas_boilerplate_preprod
POSTGRES_USER=saas_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS_MIN

# Connection string (generated automatically)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# -----------------
# REDIS (Cache & Queue)
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# -----------------
# SECURITY - JWT (CRITICAL!)
# -----------------
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_64_CHARS_MINIMUM_USE_OPENSSL
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# -----------------
# CORS
# -----------------
CORS_ORIGIN=https://preprod.votredomaine.com,https://preprod-api.votredomaine.com

# -----------------
# RATE LIMITING
# -----------------
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# -----------------
# LOGGING
# -----------------
LOG_LEVEL=info

# -----------------
# GRAPHQL
# -----------------
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false

# -----------------
# MONITORING - SENTRY APM
# -----------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------
# DOCKER REGISTRY
# -----------------
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=your-username/saas-boilerplate

# -----------------
# EXTERNAL SERVICES
# -----------------

# SendGrid Email
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@votredomaine.com
SENDGRID_FROM_NAME=SaaS Boilerplate

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxx

# Google OAuth
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxx
GOOGLE_CALLBACK_URL=https://preprod-api.votredomaine.com/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=xxxxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxx
GITHUB_CALLBACK_URL=https://preprod-api.votredomaine.com/api/auth/github/callback

# -----------------
# MONITORING - GRAFANA
# -----------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_GRAFANA_PASSWORD
GRAFANA_ROOT_URL=https://grafana.preprod.votredomaine.com

# -----------------
# SSL CERTIFICATES
# -----------------
LETSENCRYPT_EMAIL=admin@votredomaine.com
DOMAIN_NAME=preprod-api.votredomaine.com

# ================================================
# BACKUP CONFIGURATION
# ================================================
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=6

# ================================================
# OVH SERVER CONFIGURATION
# ================================================
OVH_SERVER_IP=your.server.ip.address
OVH_SSH_USER=ubuntu
OVH_SSH_PORT=22
