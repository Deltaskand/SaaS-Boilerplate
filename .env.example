# Application
NODE_ENV=development
PORT=3000
APP_NAME=SaaS Boilerplate
APP_URL=http://localhost:3000
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=saas_boilerplate
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_FREE=price_xxx
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@saas-boilerplate.com

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
COOKIE_SECRET=your-cookie-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# GDPR
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true

# Feature Flags
FEATURE_SIGNUP_ENABLED=true
FEATURE_GOOGLE_AUTH_ENABLED=false
FEATURE_GITHUB_AUTH_ENABLED=false
